@page
@model SKSchool.Pages.Subjects.IndexModel
@{
	ViewData["Title"] = "Subjects";
}
<h1>@ViewData["Title"]</h1>

<br/>
<div>
	<a class="btn btn-primary btn-sm" href="/Subjects/Create">Add Subject</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Updated On</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.subjectsList)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.UpdatedOn</td>
					<td>
						<a class="btn btn-primary btn-sm" href="/Subjects/Edit?code=@item.Code">Edit</a>
						<a class="btn btn-primary btn-sm" href="/Subjects/Delete?code=@item.Code">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>