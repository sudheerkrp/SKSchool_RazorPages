@page
@model SKSchool.Pages.Subjects.EditModel
@{
	ViewData["Title"] = "Edit Subject";
}
<h1>@ViewData["Title"]</h1>

<br />
<div>
	@if (Model.errorMsg.Length > 0)
	{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<strong>@Model.errorMsg</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}
	<form method="post">
		<input type="hidden" name="code" value="@Model.info.Code" />
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">Subject Name</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="name" value="@Model.info.Name" placeholder="Enter Name of the Subject" />
			</div>
		</div>

		<div class="row-mb-3">
			<div class="row-sm-3">
				<button class="btn btn-primary" type="submit">Submit</button>
				<a class="btn btn-outline-primary" href="/Subjects/Index" role="button">Cancel</a>
			</div>
		</div>
	</form>
</div>