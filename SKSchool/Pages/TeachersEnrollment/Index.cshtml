@page
@model SKSchool.Pages.TeachersEnrollment.IndexModel
@{
	ViewData["Title"] = "Teachers-Enrollment";
}
<h1>@ViewData["Title"]</h1>

<br />
<div>
	@if(Model.errorMsg.Length > 0)
	{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<strong>@Model.errorMsg</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>		
	}
	<form method="post">
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">Employee No.</label>
			<div class="col-sm-6">
				@if(Model.empNo == 0)
				{
					<input type="text" class="form-control" name="emp_no" placeholder="Enter your Employee No." required/>
				}
				else
				{
					<input type="text" class="form-control" name="emp_no" value="@Model.empNo" placeholder="Enter your Employee No." required/>
				}
			</div>
		</div>

		<div class="row-mb-3">
			<div class="row-sm-3">
				<button class="btn btn-primary" type="submit">Submit</button>
				<a class="btn btn-outline-primary" href="/Index" role="button">Cancel</a>
			</div>
		</div>
	</form>
</div>